---
import MainLayout from "../layouts/MainLayout.astro";
import SearchIsland from "../components/SearchIsland.jsx";

const title = "Search The Office Quotes | OfficeQuotes.xyz";
const description = "Search every quote from The Office (US) by line, character, or episode.";
const canonical = "https://officequotes.xyz/search";
---
<MainLayout title={title} description={description} canonical={canonical}>
  <section class="hero">
    <div>
      <h1>Search the entire Office archive.</h1>
      <p>
        Typo-tolerant search across every line of dialogue, character name, and
        episode title. Results appear as you type.
      </p>
    </div>
  </section>
  <SearchIsland client:load />
</MainLayout>
